{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=Northwind;Trusted_Connection=True;"
  },
  "ProductSettings": {
    "MaxShownProductCount": 3
  },
  "CashSettings": {
    "Path": "\\wwwroot\\img",
    "MaxCashedImagesCount": 10,
    "CacheExpirationTimeInSec": 600
  },
  "LogActionFilterOn": false,
  "Logging": {
    "PathFormat": "Logs/log-{Date}.txt",
    "OutputTemplate": "{Timestamp:o} {RequestId,13} [{Level:u3}] {Message} {Properties:j} ({EventId:x8}){NewLine}{Exception}",
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}

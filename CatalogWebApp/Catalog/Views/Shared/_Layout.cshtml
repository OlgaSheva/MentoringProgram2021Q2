@using Catalog.ViewModels
<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="_HeadPartial" />
</head>
<body>

    <header>
        <partial name="_NavbarPartial" />
    </header>
    
    <div class="container">
        @await Component.InvokeAsync(typeof(BreadcrumbViewComponent), new { viewContext = ViewContext })
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer text-center text-warning">
            @RenderSection("Warning", required: false)
        </div>
        <div class="footer text-center">
            <span class="text-muted">Web .NET Mentoring Program [2021Q2]</span>
        </div>
    </footer>

    <partial name="_ScriptsPartial" />
    @RenderSection("Scripts", required: false)
</body>
</html>

@model IEnumerable<Catalog.Models.Northwind.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="collapse d-sm-inline-flex flex-sm-row-reverse">
    <ul class="flex-grow-1">
        @foreach (var item in Model)
        {
            <li class="nav-item">
                <a asp-action="Image" asp-route-id="@item.CategoryId">
                    <img src="@String.Format("data:image/jpg;base64,{0}", item.Base64String)">
                </a>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </li>
        }
    </ul>
</div>